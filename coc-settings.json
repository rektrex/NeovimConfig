{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    
    "haskell": {
      "command": "hie-wrapper",
      "rootPatterns": [
        ".stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
   },

   "rust-client.channel": "stable",

   "suggest.noselect": false,

   "emmet.includeLanguages": {"javascript": "javascriptreact"},

   "python.jediEnabled": false,

   "list.normalMappings": {
     "t": "action:tabe",
     "v": "action:vsplit",
     "s": "action:split",
     "d": "expr:GetDeleteAction"
   },

    "list.insertMappings": {
      "<C-t>": "action:tabe",
      "<C-v>": "action:vsplit",
      "<C-s>": "action:split"
    },

    "git.enableGutters": true,
    "git.realtimeGutters": true,
    "coc.source.issues.enable": false,

    "list.source.lists.defaultOptions": ["--number-select"],
    "list.source.mru.defaultOptions": ["--number-select"],
    "list.source.commands.defaultOptions": ["--number-select"],
    "list.source.folders.defaultOptions": ["--number-select"],
    "list.source.links.defaultOptions": ["--number-select"],
    "list.source.colors.defaultOptions": ["--number-select"],
    "list.source.commits.defaultOptions": ["--number-select"],
    "list.source.gstatus.defaultOptions": ["--number-select"],
    "list.source.issues.defaultOptions": ["--number-select"],
    "list.source.helptags.defaultOptions": ["--number-select"],
    "list.source.extensions.defaultOptions": ["--number-select"],
    "list.source.location.defaultOptions": ["--number-select"],
    "list.source.symbols.defaultOptions": ["--number-select"],
    "list.source.outline.defaultOptions": ["--number-select"],
    "list.source.diagnostics.defaultOptions": ["--number-select"],
    "list.source.sources.defaultOptions": ["--number-select"],
    "list.source.services.defaultOptions": ["--number-select"],
    "list.source.output.defaultOptions": ["--number-select"],
    "list.source.actions.defaultOptions": ["--number-select"],
    "list.source.snippets.defaultOptions": ["--number-select"],
    "list.source.lines.defaultOptions": ["--number-select"],
    "list.source.sessions.defaultOptions": ["--number-select"],
    "list.source.cmdhistory.defaultOptions": ["--number-select"],
    "list.source.searchhistory.defaultOptions": ["--number-select"],
    "list.source.vimcommands.defaultOptions": ["--number-select"],
    "list.source.maps.defaultOptions": ["--number-select"],
    "list.source.windows.defaultOptions": ["--number-select"],
    "list.source.marks.defaultOptions": ["--number-select"],
    "list.source.filetypes.defaultOptions": ["--number-select"],
    "list.source.files.defaultOptions": ["--number-select"],
    "list.source.tags.defaultOptions": ["--number-select"],
    "list.source.buffers.defaultOptions": ["--number-select"],
    "list.source.grep.defaultOptions": ["--number-select"],
    "list.source.locationlist.defaultOptions": ["--number-select"],
    "list.source.quickfix.defaultOptions": ["--number-select"],
    "list.source.words.defaultOptions": ["--number-select"],
    "list.source.yank.defaultOptions": ["--number-select"],
    "list.source.branches.defaultOptions": ["--number-select"],
    "list.source.bcommits.defaultOptions": ["--number-select"],
    "list.source.gfiles.defaultOptions": ["--number-select"]
}
